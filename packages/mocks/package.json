{
  "name": "@repo/mocks",
  "version": "1.0.0",
  "description": "Mock server for city dance external API requests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "pnpm build && pnpm test:endpoints",
    "test:endpoints": "tsx tests/endpoints.test.ts",
    "test:build": "tsc -p tsconfig.test.json",
    "clean": "powershell -Command \"if (Test-Path dist) { Remove-Item -Recurse -Force dist }; if (Test-Path dist-tests) { Remove-Item -Recurse -Force dist-tests }\""
  },
  "dependencies": {
    "@repo/typescript-config": "workspace:*",
    "@dance-kiosk/types": "workspace:*",
    "dotenv": "^17.0.0",
    "msw": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "data"
  ]
}